{
	"compilerOptions": {
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "dist",
		"declarationDir": "dist",
		"lib": [
			"ES2020",
			"DOM"
		],
		"pretty": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"declaration": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": false,
		"allowJs": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"test-webview",
		"src/**/*.spec.ts"
	]
}